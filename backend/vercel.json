{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": null,            
  "buildCommand": "npm install",         
  "outputDirectory": "", 
  "functions": {
    "api/index.ts": {
      "maxDuration": 30,
      "includeFiles": "node_modules/**"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index" },
    { "source": "/(.*)", "destination": "/api/index" }
  ]
}
