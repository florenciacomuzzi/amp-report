# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (PostgreSQL - CloudSQL compatible)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=amp_report
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# For Google Cloud SQL, use:
# DB_HOST=/cloudsql/project:region:instance
# DB_SSL=true

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
REACT_APP_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# CORS Configuration
# For single origin:
CORS_ORIGIN=http://localhost:3001
# For multiple origins (comma-separated):
# CORS_ORIGIN=http://localhost:3001,https://amp-report-frontend.vercel.app

# Logging
LOG_LEVEL=info

# Google Cloud Platform (for Cloud Run deployment)
GCP_PROJECT_ID=development-454916
GCP_REGION=us-east1